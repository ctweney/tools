#!/bin/bash

DIRECTORY="$1"

if [ -z "$1" ]; then
	DIRECTORY=~/dev/calcentral
fi

cd $DIRECTORY

WIPE="$2"
if [ -z "$2" ]; then
	WIPE=""
fi

mkdir -p logs
#mvn clean package -Dmaven.test.skip=true

if [ "$WIPE" = "wipe" ]; then
	mvn flyway:clean
fi

#mvn flyway:migrate
killall -t `tty` tail
nohup mvn clean package flyway:migrate jetty:run -Dmaven.test.skip=true -Dcom.sun.management.jmxremote > logs/jetty.log 2>&1 &
tail -f logs/jetty.log&

