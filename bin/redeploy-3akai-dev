#!/bin/bash

if [ -z "$1" ]; then
    echo "Usage: $0 version targetserver sling_password"
    exit;
fi

VERSION=$1
TARGETSERVER=$2
PASSWORD=$3

cd ~/dev/$VERSION/3akai-ux
echo "Redeploying out of `pwd`"
mvn -P redeploy -Dsling.url=https://$TARGETSERVER.berkeley.edu/system/console -Dsling.user=admin -Dsling.password=$PASSWORD

